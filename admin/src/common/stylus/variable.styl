border-1px($color = #dcdcdc, $style = solid, $direction = all)
  position: relative
  &::after
    content: ""
    pointer-events: none
    display: block
    position: absolute
    left: 0
    top: 0
    transform-origin: 0 0
    border: 0 !important
    if $direction == top
      border-top 1px $style $color !important
    else if $direction == bottom
      border-bottom 1px $style $color !important
    else if $direction == left
      border-left 1px $style $color !important
    else if $direction == right
      border-right 1px $style $color !important
    else
      border 1px $style $color !important
    width 100%
    height 100%
    @media (min-resolution: 2dppx)
      width: 200%
      height: 200%
      transform: scale(.5)
    @media (min-resolution: 3dppx)
      width: 300%
      height: 300%
      transform: scale(.333)
border-none()
  &::before
    display: none
  &::after
    display: none
//图片长按不调用系统保存功能
